category:            System
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     AnsiParser.Types, AnsiParser.Classes, AnsiParser.Parser, AnsiParser.FrontEnd.Parse, AnsiParser.FrontEnd.Lex
  -- other-modules:
  other-extensions:    FlexibleInstances, OverloadedStrings, FlexibleContexts
  build-depends:       base >=4.8 && <4.9
                     , bytestring >=0.10 && <0.11
                     , array
                     , containers
  hs-source-dirs:      src
  build-tools:         alex, happy
  default-language:    Haskell2010
  ghc-options:         -Wall

test-suite frontend
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  build-depends: base
               , ansi-parser
               , hspec
  main-is: TestFrontEnd.hs
  default-language: Haskell2010
  ghc-options: -Wall